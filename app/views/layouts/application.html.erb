<!DOCTYPE html>
<html>
  <head>
    <title>TesteOraculoRuby</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script
        src="https://code.jquery.com/jquery-3.4.1.min.js"
        integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo="
        crossorigin="anonymous"></script>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand" href="#">Oráculo</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#conteudoNavbarSuportado" aria-controls="conteudoNavbarSuportado" aria-expanded="false" aria-label="Alterna navegação">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="conteudoNavbarSuportado">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <%= link_to "Home", task_index_url, :method => "get", class: 'nav-link' %>
      </li>
  </div>
    <% if user_signed_in? %>
    <%= button_to 'Logout', destroy_user_session_url, method: 'delete', class: 'btn btn-outline-danger' %>
    <% else %>
    <%= button_to 'Login', new_user_session_url, method: 'get', class: 'btn btn-outline-success' %>
    <% end %>
</nav>
    <% if notice %>
    <div class="alert alert-info" role="alert"><%= notice %></div>
    <% end %>
    <% if alert %>
    <div class="alert alert-success" role="alert"><%= alert %></div>
    <% end %>
    <%= yield %>
  </body>
</html>
